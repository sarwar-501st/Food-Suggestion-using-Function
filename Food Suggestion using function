import random
from tkinter import *
root = Tk()
root.geometry('400x400')
root.title('Auto Recipe Generator')
Label(root, text= 'Auto Recipe Generator' , font = 'times 20 bold').pack()
Label(root, text = 'Click Any One :', font = 'times 15 bold').place(x=40, y=80)


def breakfast():
    possible_actions = ["Bread", "Rice", "Oats","Buns","Cornflakes"]
    computer_action = random.choice(possible_actions)
    print(f"\nYou are suggested to eat {computer_action}")
    
   
    
def lunch():
    possible_actions = ["Bread", "Rice", "Oats","Buns","Cornflakes"]
    computer_action = random.choice(possible_actions)
    print(f"\nYou are suggested to eat {computer_action}")
    
def dinner():
    possible_actions = ["Bread", "Rice", "Oats","Buns","Cornflakes"]
    computer_action = random.choice(possible_actions)
    print(f"\nYou are suggested to eat {computer_action}")
    
    
    Button(root, text= 'Breakfast',font ='arial 15', command= breakfast, bg = 'ghost white').place(x=60, y=120)
Button(root, text= 'Luch',font ='arial 15', command = lunch , bg = 'ghost white').place(x=70, y=180)
Button(root, text= 'Dinner',font ='arial 15', command = dinner, bg = 'ghost white').place(x=80, y=240)
root.mainloop()
